{
  "name": "common_bot",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "private": true,
  "author": "Sergei Zheludkov",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@types/jest": "^29.5.7",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "babel-jest": "^29.7.0",
    "eslint": "8.22.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lerna": "^5.5.4",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "start_server:dev": "cd packages/server && yarn start:dev",
    "start_bot:dev": "cd packages/bot && yarn dev",
    "build:packages": "lerna run build --scope=@common_bot/{shared,api,i18n}",
    "build:services": "lerna run build --parallel --scope=@common_bot/{server,bot}",
    "typecheck": "lerna run typecheck --parallel --scope=@common_bot/{shared,api,i18n,server,bot}",
    "lint": "lerna run lint --parallel --scope=@common_bot/{shared,api,i18n,server,bot}",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && yarn lint",
      "pre-push": "yarn test"
    }
  }
}
